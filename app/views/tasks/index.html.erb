<p id="notice"><%= notice %></p>

<div>
  <h1>Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= check_box_tag :complete, 1, task.completed?, data: {id: task.id} %>
        <span>
          <% if task.completed? %>
            <del><%= task.description %></del>
          <% else %>
            <%= task.description %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</div>

<br>

<%= link_to 'New task', new_task_path %>
